{
	auto_https off
}

:80 {
	
	log {
		output file /var/log/access.log {
			roll_size 1gb
			roll_keep 5
			roll_keep_for 720h
		}
	}

	handle /prometheus* {
        # basic_auth /prometheus* {
        #     {$ADMIN_USER} {$ADMIN_PASSWORD}
        # }
		reverse_proxy prometheus:9090
	}

	handle /alert* {
		reverse_proxy alertmanager:9093
	}

	handle /unsee* {
		reverse_proxy unsee:8080
	}

	handle /grafana* {
		reverse_proxy grafana:3000
	}

	handle {
		reverse_proxy grafana:3000
	}

	handle {
		reverse_proxy grafana:3000
	}
}
